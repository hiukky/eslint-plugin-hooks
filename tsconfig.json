{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@rules/*": ["lib/rules/*"]
    }
  },
  "include": ["lib/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
